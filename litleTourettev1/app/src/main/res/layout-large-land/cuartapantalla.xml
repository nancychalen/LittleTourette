<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/fondomenu"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/cerrarsesion"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/atras"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.5"/>

        <ImageView
            android:id="@+id/puntaje"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/puntaje"
            android:layout_weight="0.5"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgavatar"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:gravity="center"

        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/txtnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/boogaloo"
        android:gravity="center"
        android:text="Hola!"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/txtempezar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/boogaloo"
        android:gravity="center"
        android:text="Deseas Empezar la Actividad?"
        android:textAlignment="center"
        android:textColor="#8F2605"
        android:textSize="45dp" />

    <ImageView
        android:id="@+id/btnempezarr"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:gravity="center"
        app:srcCompat="@drawable/empezar" />




</LinearLayout>


