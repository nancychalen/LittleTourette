<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondololograstes"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".segundapantalla">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/fondoinicio"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/logot" />

        <TextView
            android:id="@+id/txtbienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:fontFamily="@font/boogaloo"
            android:text="Bienvenido!"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtnombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtbienvenido"
            android:fontFamily="@font/boogaloo"
            android:text="Escribe tu Nombre"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/ingresanombre"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtnombre"
            android:background="@drawable/fondoelemento1"
            android:fontFamily="@font/boogaloo"
            android:inputType="text"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/txtclave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ingresanombre"
            android:fontFamily="@font/boogaloo"
            android:text="Escribe tu Clave"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />
        <EditText
            android:id="@+id/ingresaclave"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtclave"
            android:background="@drawable/fondoelemento1"
            android:fontFamily="@font/boogaloo"
            android:inputType="text"
            android:textAlignment="center" />
        <EditText
            android:id="@+id/txtedad"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="date"
            android:textColorLink="#FFFFFF"
            android:textSize="25dp"
            android:hint="Selecciona tu edad"
            android:fontFamily="@font/boogaloo"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ingresaclave"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:focusable="false"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/registrar"
            android:layout_width="177dp"
            android:layout_height="185dp"
            android:layout_below="@+id/txtedad"

            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/empezar" />
    </RelativeLayout>

</LinearLayout>