<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondololograstes"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondoinicio"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/logot" />

        <TextView
            android:id="@+id/txtbienvenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:gravity="top"
            android:text="Bienvenido!"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="45sp" />
        <TextView
            android:id="@+id/txtnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="Escribe tu Nombre"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
        <EditText
            android:id="@+id/ingresanombre"
            android:layout_width="342dp"
            android:layout_height="102dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fondoelemento1"
            android:fontFamily="@font/boogaloo"
            android:gravity="center"
            android:inputType="text"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/txtclave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="Escribe tu Clave"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
        <EditText
            android:id="@+id/ingresaclave"
            android:layout_width="342dp"
            android:layout_height="102dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fondoelemento1"
            android:fontFamily="@font/boogaloo"
            android:gravity="center"
            android:inputType="text"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="45sp"
            android:text="Ingresar"
            android:textColor="#FF5722"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnregistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="45sp"
            android:text="Registrarse"
            android:textColor="#000"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>




