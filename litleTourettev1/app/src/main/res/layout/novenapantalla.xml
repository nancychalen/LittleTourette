<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondopuntaje"
    android:orientation="vertical"
    tools:context=".novenapantalla">

    <ImageView
        android:id="@+id/regresar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/atras" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/avatar"
            android:layout_width="157dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="PUNTAJE"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="Numero de aciertos"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/txtaciertos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="Numero de errores"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/txterrores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="Nivel"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/txtnivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />



    </LinearLayout>



</LinearLayout>