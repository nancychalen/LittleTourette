<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondonivel1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="95dp"
            android:layout_height="149dp"
            app:srcCompat="@drawable/atras" />

        <TextView
            android:id="@+id/txtavatar"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:fontFamily="@font/boogaloo"
            android:gravity="top"
            android:text="Juan estas Listo?"
            android:textAlignment="center"
            android:textColor="#6B4A02"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:srcCompat="@drawable/avatar1" />


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imgmanzana"
                android:layout_width="131dp"
                android:layout_height="145dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/manzana" />

            <ImageView
                android:id="@+id/imuvas"
                android:layout_width="131dp"
                android:layout_height="145dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/uvas" />

            <ImageView
                android:id="@+id/imgpina"
                android:layout_width="131dp"
                android:layout_height="145dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pina" />

        </TableRow>

        <ImageView
            android:id="@+id/imgpinas"
            android:layout_width="131dp"
            android:layout_height="242dp"
            app:srcCompat="@drawable/pina" />

        <TextView
            android:id="@+id/txtpregunta"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:fontFamily="@font/boogaloo"
            android:gravity="top"
            android:text="Â¿Cuales frutas se parecen?"
            android:textAlignment="center"
            android:textColor="#6B4A02"
            android:textSize="55sp" />




    </TableLayout>



</LinearLayout>