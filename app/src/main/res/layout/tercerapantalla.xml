<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondoinicio"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/logot" />

        <TextView
            android:id="@+id/txtavatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:gravity="top"
            android:text="Selecciona tu avatar"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="45sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/avatar10"
                    android:layout_width="131dp"
                    android:layout_height="145dp"
                    app:srcCompat="@drawable/avatar10" />

                <ImageView
                    android:id="@+id/avatar11"
                    android:layout_width="131dp"
                    android:layout_height="145dp"
                    app:srcCompat="@drawable/avatar11" />

                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="131dp"
                    android:layout_height="145dp"
                    app:srcCompat="@drawable/avatar1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/avatar2"
                    android:layout_width="131dp"
                    android:layout_height="145dp"
                    app:srcCompat="@drawable/avatar2" />

                <ImageView
                    android:id="@+id/avatar7"
                    android:layout_width="131dp"
                    android:layout_height="145dp"
                    app:srcCompat="@drawable/avatar7" />

                <ImageView
                    android:id="@+id/avatar9"
                    android:layout_width="131dp"
                    android:layout_height="145dp"
                    app:srcCompat="@drawable/avatar9" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/avatar5"
                    android:layout_width="131dp"
                    android:layout_height="145dp"
                    app:srcCompat="@drawable/avatar5" />

                <ImageView
                    android:id="@+id/avatar3"
                    android:layout_width="131dp"
                    android:layout_height="145dp"
                    app:srcCompat="@drawable/avatar3" />

                <ImageView
                    android:id="@+id/avatar6"
                    android:layout_width="131dp"
                    android:layout_height="145dp"
                    app:srcCompat="@drawable/avatar6" />
            </TableRow>
        </TableLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        </LinearLayout>

        <ImageView
            android:id="@+id/btnempezar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/empezar" />


    </LinearLayout>

</LinearLayout>