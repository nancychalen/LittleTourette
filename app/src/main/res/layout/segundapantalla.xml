<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondololograstes"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondoinicio"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/logot" />

        <TextView
            android:id="@+id/txtbienvenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:gravity="top"
            android:text="Bienvenido!"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/txtnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="Escribe tu Nombre"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/ingresanombre"
            android:layout_width="342dp"
            android:layout_height="102dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fondoelemento1"
            android:fontFamily="@font/boogaloo"
            android:gravity="center"
            android:inputType="text"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/txtedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="Selecciona tu Edad"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtnumero5"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/boogaloo"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/txtnumero6"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/boogaloo"
                android:text="6"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/txtnumero7"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/boogaloo"
                android:text="7"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/txtnumero8"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/boogaloo"
                android:text="8"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/txtnumero9"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/boogaloo"
                android:text="9"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="45sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtavatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/boogaloo"
                android:text="Selecciona tu Avatar"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="35sp" />



            <ImageView
                android:id="@+id/imagenavatar"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                app:srcCompat="@drawable/logoo" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>