<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomenu"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="95dp"
            android:layout_height="149dp"
            app:srcCompat="@drawable/atras" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondomenu"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/avatar1" />

        <TextView
            android:id="@+id/txtavatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:gravity="top"
            android:text="Hola JUAN!"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/txtempezar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:gravity="top"
            android:text="Deseas Empezar la Actividad!"
            android:textAlignment="center"
            android:textColor="#8F2605"
            android:textSize="45sp" />

        <ImageView
            android:id="@+id/btnempezarr"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/empezar" />

    </LinearLayout>


</LinearLayout>