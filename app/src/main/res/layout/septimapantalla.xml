<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondololograstes"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondoinicio"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"

            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/guirnalda" />

        <ImageView
            android:id="@+id/avatar"

            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/avatar1" />

        <TextView
            android:id="@+id/txtnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="Juan Lo Lograste"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/globos"

            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/globos" />

    </LinearLayout>


</LinearLayout>